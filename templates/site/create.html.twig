{% extends 'base.html.twig' %}

{% block title %}Créer un site{% endblock %}


{% block body %}

    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-12 col-sm-10 col-md-8 col-lg-4">
                <h1 class="text-center">Créer un site</h1>
            </div>
        </div>
    </div>

    {# Affichage form create site détaillé #}
    </div>
    <div class="row justify-content-center mt-5">
        <div class="col-12 col-sm-10 col-md-8 col-lg-4">
            <div class="row justify-content-center mt-5">
                {{ form_start(siteForm) }}
                <ul class="list-group">
                    <li class="list-group-item">
                        <div class="mb-4">
                            <div class="row justify-content-center mt-5">
                                <div class="col-lg-4">
                                    {{ form_label(siteForm.nom) }}
                                </div>
                                <div class="col-lg-8">
                                    {{ form_widget (siteForm.nom) }}
                                    {{ form_errors (siteForm.nom) }}
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>

            </div>
        </div>
    </div>

    <div class="row justify-content-center mt-5">
        <div class="col-12 col-sm-10 col-md-8 col-lg-4">
            <div class="row justify-content-center">
                <div class="btn-group" role="group" aria-label="Basic outlined example">
                    <button type="submit" class="btn btn-outline-primary">Valider</button>

                    <button class="btn btn-outline-primary" onclick="goBack( {{ page }} )">Annuler</button>

                </div>
            </div>
        </div>
    </div>
    {{ form_end(siteForm) }}


{% endblock %}