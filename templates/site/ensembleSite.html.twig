{% extends 'base.html.twig' %}

{% block title %}Liste sites{% endblock %}

{% block body %}

    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-lg-6">
                <h3 class="text-center mb-3">Liste des sites</h3>
                <div class="table-wrapper-scroll-y my-custom-scrollbar-list-users">
                    <table class="table table-striped table-bordered table">
                        <thead>
                        <tr>
                            <th scope="col">Nom</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for site in sites %}
                            <tr>
                                <td>{{ site.nom }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td scope="row">Pas de site !</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <a class="btn btn-outline-primary" href="{{ path('site_create') }}">Cr√©er un site</a>
            </div>
        </div>
    </div>
{% endblock %}
