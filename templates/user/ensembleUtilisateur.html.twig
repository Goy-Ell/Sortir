{% extends 'base.html.twig' %}

{% block title %}Ensemble Utilisateurs{% endblock %}

{% block body %}

<div  class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-lg-6">
            <h3 class="text-center mb-3">Liste des utilisateurs</h3>
            <div class="table-wrapper-scroll-y my-custom-scrollbar-list-users">
                <table class="table table-striped table-bordered table">
                    <thead>
                    <tr>
                        <th scope="col">Pseudo</th>
                        <th scope="col">Nom</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td><a href="{{ path('user_profilUtilisateur', {'id' : user.id } ) }}">{{ user.pseudo }}</td>
                            <td>{{ user.prenom }} {{ user.nom }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td scope="row">Pas d'utilisateur !</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{% endblock %}



