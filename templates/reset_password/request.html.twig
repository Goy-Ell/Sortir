{% extends 'base.html.twig' %}

{% block title %}Modifier votre mot de passe{% endblock %}

{% block body %}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-12 col-sm-10 col-md-8 col-lg-4">

            {% for flashError in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
            <h1>Modifier votre mot de passe</h1>

            {{ form_start(requestForm) }}


            <div class="mb-3">
                <div class="form-label">{{ form_label(requestForm.email) }}</div>
                {{ form_widget(requestForm.email, {'attr' : {'class': 'form-control'}}) }}
                {{ form_errors(requestForm.email) }}
            </div>

                <div>
                    <small>
                        Entrer votre email et vous allez recevoir un lien pour changer votre mot de passe.
                    </small>
                </div>

                <button class="btn btn-primary mt-3">Envoyer le mail</button>
            {{ form_end(requestForm) }}

        </div>
    </div>
</div>

{% endblock %}
